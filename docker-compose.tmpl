services:
  modx_web:
    image: $CI_REGISTRY_IMAGE:main_frontend
    container_name: modxWeb
    expose:
      - 5173
    networks:
      - caddy_net

  modx_server:
    image: $CI_REGISTRY_IMAGE:main_backend
    container_name: modxServer
    expose:
      - 8080
    environment:
      - PORT=8080
      - GIN_MODE=release
      - POSTGRES_PASSWORD=$POSTGRES_PASSWORD
      - POSTGRES_USER=$POSTGRES_USER
      - POSTGRES_DB=$POSTGRES_DB
      - POSTGRES_HOST=$POSTGRES_HOST
      - POSTGRES_PORT=$POSTGRES_PORT
      - GCLOUD_STORAGE_URL=$GCLOUD_STORAGE_URL
      - OMISE_PUBLIC_KEY=${OMISE_PUBLIC_KEY}
      - OMISE_SECRET_KEY=${OMISE_SECRET_KEY}
    depends_on:
      modx_postgres:
        condition: service_healthy
    networks:
      - caddy_net

  modx_postgres:
    image: postgres:14-alpine
    container_name: modXpostgres
    user: postgres
    ports:
      - 5555:5432
    volumes:
      - ./init-db.sh:/docker-entrypoint-initdb.d/init-db.sh
    environment:
      - POSTGRES_PASSWORD=$POSTGRES_PASSWORD
      - POSTGRES_USER=$POSTGRES_USER
      - POSTGRES_DB=$POSTGRES_DB
    healthcheck:
      test: ["CMD", "pg_isready"]
      interval: 10s
      timeout: 5s
      retries: 5
    networks:
      - caddy_net

networks:
  caddy_net:
    external: true